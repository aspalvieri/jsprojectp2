extends ../layouts/main.pug
block content
    .container
        header
            h1= title

        div
            table.table.table-striped
                thead
                    tr
                        th Title
                        th Status
                        th Actions
                
                tbody
                    each task in tasks
                        tr
                            td
                                a(href=`/tasks/${task.id}`)= task.title
                            td= task.status
                            td
                                a(href=`/tasks/${task.id}/edit`) Edit
                                = " | "
                                form.destroy(action=`/tasks/destroy`, method="POST", onsubmit=`return confirm("Are you sure you wish to delete '${task.title}'?");`)
                                    input(type="hidden", name="id", value=task.id)
                                    input(type="submit", value="Delete")